{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "containers/*": [ "src/containers/*" ],
      "pages/*": [ "src/pages/*" ],

      "intl": [ "local_modules/intl" ],
      "device": [ "local_modules/device" ],
      "router": [ "local_modules/router" ],
      "logger": [ "local_modules/logger" ],
      "cookie-storage": [ "local_modules/cookie-storage" ],
      "request-context": [ "local_modules/request-context" ],
      "router/server": [ "local_modules/router/server" ]
    }
  },
  "include": [
    "src/**/*",
    "client/**/*",
    "server/**/*",
    "local_modules/**/*"
  ]
}
