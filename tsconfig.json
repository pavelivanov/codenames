{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "paths": {
      "helpers": [ "client/app/helpers/index.js" ],
      "helpers/*": [ "client/app/helpers/*" ],
      "decorators/*": [ "client/app/decorators/*" ],
      "containers/*": [ "client/app/containers/*" ],
      "components/*": [ "client/app/components/*" ],
      "components": [ "client/app/components/index.js" ],
      "pages/*": [ "client/app/pages/*" ],

      "api": [ "client/app/api/index.ts" ],
      "game": [ "client/app/game/index.ts" ],
      "socket": [ "client/app/socket/index.ts" ],
      "routes": [ "client/app/routes.tsx" ],

      "base-path": [ "client/local_modules/base-path/index.js" ],
      "debounce": [ "client/local_modules/debounce/index.js" ],
      "hooks": [ "client/local_modules/hooks/index.js" ],
      "hooks/*": [ "client/local_modules/hooks/*" ],

      "server/*": [ "server/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "client/app/**/*",
    "server/app/**/*",
    "client/local_modules/**/*",
    "@types/**/*.d.ts",
    "typings/global.d.ts"
  ]
}
